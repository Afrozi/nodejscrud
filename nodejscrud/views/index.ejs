<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Show Data</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<body>
    <div class="container">
        <h1 class="text-center">All Chats</h1>
        <form action="/chats/new" method="get">
            <button class="btn btn-success">Create New</button>
        </form>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">From</th>
                    <th scope="col">Msg</th>
                    <th scope="col">To</th>
                    <th scope="col">Date</th>
                    <th scope="col">Handle</th>
                </tr>
            </thead>
            <tbody>
                <% for(let chat of chats) { %>
                    <tr>
                        <td>From: <%= chat.form %>
                        </td>
                        <td>
                            <%= chat.msg %>
                        </td>
                        <td>Received by: <%= chat.to %>
                        </td>
                        <td>Date: <%= chat.created_at.toString().split(" ").slice(0,4).join(" ") %></td>
                <td class="mx-2">
                    <form action=" /chats/<%=chat._id %>/edit" method="get">
                                <button class="btn btn-primary my-2">Update</button>
                                </form>
                                <form action="/chats/<%= chat._id %>?_method=DELETE" method="post">
                                    <button class="btn btn-danger">Delete</button>
                                </form>
                        </td>
                    </tr>
                    <% } %>
            </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
</body>

</html>